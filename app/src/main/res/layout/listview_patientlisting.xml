<?xml version="1.0" encoding="utf-8"?>
<!-- This layout defines the layout of a patient that is assigned to the specialist. Used in staff_patients -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Patient's Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_patientname"
        android:textSize="22dp"/>

    <TextView
        android:paddingLeft="18dp"
        android:text="Patient's Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_patientaccount" />
</LinearLayout>