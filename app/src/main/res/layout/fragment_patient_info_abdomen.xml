<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shankarenfo.cancermonitorapp.PatientInfoAbdomen"
    android:padding="20dp"
    android:background="@drawable/bgp_bluegreypattern">

    <!-- this is the xml to select specific cancer types, based on the Abdominal region. -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_pitypes">

        <TextView
            android:text="Abdominal Region"
            android:background="#e572e3ff"
            android:padding="4dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="@string/InfoStomachTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pivStomach"/>

        <Button
            android:text="@string/InfoPancreaticTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pivPancreas" />

    </LinearLayout>

    <!-- the information containers of specific types of cancer, selected from menu -->
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#e572e3ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_pivariantStomach">

        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pivariantStomachBack" />

        <TextView
            android:text="@string/InfoStomachTitle"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"/>

        <TextView
            android:text="TextView"
            android:textSize="3dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">
            <TextView
                android:text="@string/InfoStomachContent"
                android:padding="10dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#e572e3ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_pivariantPancreas">

        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pivariantPancreasBack" />

        <TextView
            android:text="@string/InfoPancreaticTitle"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"/>

        <TextView
            android:text="TextView"
            android:textSize="3dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">
            <TextView
                android:text="@string/InfoPancreaticContent"
                android:padding="10dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
    </LinearLayout>

    </FrameLayout>
